            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-start">
            <a href="/" class="navbar-item is-hoverable pt-1">
            {{#if loggedIn}}
            Home
            </a>

            <a href="/dashboard" class="navbar-item is-hoverable pt-1">
              Dashboard
            </a>

            <a href="/dashboard/create/" class="navbar-item is-hoverable pt-1 mr-4">
              Create Post
            </a>

            <a>
              <button id="logout" class="button is-danger is-light">
                Logout
              </button>
            </a>

            {{else}}
            <a href="/" class="navbar-item is-hoverable pt-1">
              Home
            </a>
            
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
